{
  "name": "africa-journal-backend",
  "version": "1.0.0",
  "description": "Backend API for Africa Journal of Social Work and Social Policy",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:migrate": "ts-node src/database/migrations.ts run",
    "db:seed": "ts-node src/database/seeds.ts seed",
    "db:reset": "ts-node src/database/seeds.ts clear && npm run db:seed",
    "db:init": "npm run db:migrate && npm run db:seed",
    "db:setup": "ts-node src/scripts/init-db.ts",
    "email:test": "ts-node src/scripts/test-email.ts",
    "security:migrate": "ts-node src/database/migrations/20240808_add_audit_logs.ts"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.54.0",
    "@types/winston": "^2.4.4",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.7.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "date-fns": "^3.3.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "rate-limit-redis": "^4.2.0",
    "redis": "^4.6.13",
    "sanitize-html": "^2.11.0",
    "winston": "^3.17.0",
    "xss": "^1.0.14",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.17",
    "@types/csurf": "^1.11.5",
    "@types/express": "^4.17.21",
    "@types/handlebars": "^4.0.40",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.10.9",
    "@types/redis": "^4.0.10",
    "@types/sanitize-html": "^2.16.0",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
